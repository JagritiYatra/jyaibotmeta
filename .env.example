# JY Alumni Bot Environment Variables - Meta WhatsApp Version

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/jy-alumni-bot
DB_NAME=jy-alumni-bot

# Meta WhatsApp Cloud API Configuration
META_APP_ID=your_meta_app_id_here
META_APP_SECRET=your_meta_app_secret_here
META_PERMANENT_TOKEN=your_permanent_access_token_here
PHONE_NUMBER_ID=your_phone_number_id_here
WABA_ID=your_whatsapp_business_account_id_here
WHATSAPP_PHONE_NUMBER=your_whatsapp_phone_number_here
WEBHOOK_VERIFY_TOKEN=your_random_verify_token_here

# Email Configuration (for OTP)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password

# Optional Configuration
AI_MODEL=gpt-4o
AI_MAX_TOKENS=3000
AI_TEMPERATURE=0.6
MAX_SEARCH_RESULTS=6
DAILY_QUERY_LIMIT=30
SESSION_TIMEOUT_HOURS=48
NODE_ENV=production
DEBUG_MODE=false
PORT=3000